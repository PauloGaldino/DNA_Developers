@using DNA.UI.Web.Views.Manage
@model TwoFactorAuthenticationViewModel
@{
    ViewData["Title"] = "Autenticar em dois fatores";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
   
}

<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>Você não tem códigos de recuperação restantes.</strong>
            <p>You must <a asp-action="GenerateRecoveryCodes">gere um novo conjunto de códigos de recuperação </a> antes de fazer login com um código de recuperação.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong> Você tem 1 código de recuperação restante. </strong>
            <p>Você pode <a asp-action="GenerateRecoveryCodes"> gerar um novo conjunto de códigos de recuperação</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong> Você tem os códigos de recuperação @Model.RecoveryCodesLeft restantes.</strong>
            <p>Você deve <a asp-action="GenerateRecoveryCodes"> gerar um novo conjunto de códigos de recuperação</a>.</p>
        </div>
    }

    <a asp-action="Disable2faWarning" class="btn btn-default">Disabilitar 2FA</a>
    <a asp-action="GenerateRecoveryCodes" class="btn btn-default">Redefinir códigos de recuperação.</a>
}

    <h5>Aplicativo autenticador</h5>
@if (!Model.HasAuthenticator)
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Adicionar aplicativo autenticador</a>
}
else
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Configurar aplicativo autenticador</a>
    <a asp-action="ResetAuthenticatorWarning" class="btn btn-default">Redefinir aplicativo autenticador</a>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
