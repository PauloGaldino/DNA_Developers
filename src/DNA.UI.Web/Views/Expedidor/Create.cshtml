@model DNA.Application.ViewModels.Cadastro.Common.Expedidores.ExpedidorViewModel

@{
    ViewData["Title"] = "Registrar um novo Expedidor";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />

        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />

        <div class="form-group">
            <label asp-for="CompanhiaNome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanhiaNome" class="form-control" />
                <span asp-validation-for="CompanhiaNome" class="text-danger"></span>
            </div>
        </div>
      
        <div class="form-group">
            <label asp-for="Telefone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>
  
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
