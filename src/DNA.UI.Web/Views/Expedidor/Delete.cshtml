@model DNA.Application.ViewModels.Cadastro.Common.Expedidores.ExpedidorViewModel
@{
    ViewData["Title"] = "Deletar Expedidor";

}
<h2>@ViewData["Title"]</h2>

<form asp-action="Delete">
    <vc:summary />

    <h3>Você deseja realmente excluir o @Model.CompanhiaNome?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CompanhiaNome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CompanhiaNome)
            </dd>
          <dt>
              @Html.DisplayNameFor(model => model.Telefone)
          </dt>
            <dd>
                @Html.DisplayFor(model => model.Telefone)
            </dd>
        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
        </div>
    </div>
</form>
