        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Sobrenome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cargo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cargo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DataAdmisao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataAdmisao)
            </dd>
     
        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
        </div>
    </div>
</form>
