@model DNA.Application.ViewModels.Cadastro.Categorias.CategoriaViewModel

@{
    ViewData["Title"] = "Editar o cadastro da categoria";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />

        <input type="hidden" asp-for="Id" />


        <input type="hidden" asp-for="Id" />

        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />
        <div class="form-group">
            <label asp-for="Nome" class=" col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control "/>
                <span asp-validation-for="Nome" class="text-danger "></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
